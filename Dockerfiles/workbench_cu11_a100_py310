FROM nvidia/cuda:11.8.0-devel-ubuntu22.04

RUN apt-get update && \
    apt-get install -y cmake \
                        build-essential \
                        libopenblas-dev \
                        libhdf5-dev \
                        apt-utils \
                        curl \ 
                        libgl1 \
                        libglib2.0-dev \
                        python3.10 \
                        python3-pip \
                        git \
                        vim

RUN curl -sL https://deb.nodesource.com/setup_16.x | bash - && apt-get install nodejs
RUN pip install torch torchvision torchaudio --index-url https://download.pytorch.org/whl/cu118
RUN pip install jupyterlab \
                opencv-python \
                kornia \
                easydict \
                timm \
                seaborn \
                line_profiler \
                pycocotools \
                matplotlib \
                onnxruntime \
                onnx \ 
                scikit-image \
                pandas \
                numpy \
                tensorboard \
                imageio[pyav] \
                scikit-learn \
                einops \
                fairscale \ 
                transformers \
                'git+https://github.com/facebookresearch/detectron2.git'

RUN ln -s /usr/bin/python3.10 /usr/bin/python
ENV LD_LIBRARY_PATH=/usr/local/nvidia/lib:/usr/local/nvidia/lib64:/usr/lib/x86_64-linux-gnu/:/usr/local/cuda/targets/x86_64-linux/lib/

WORKDIR /home/rafael/
# CMD jupyter-lab --no-browser --ip 0.0.0.0 --port 8888 --allow-root
